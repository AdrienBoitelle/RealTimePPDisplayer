<Window x:Class="RealTimePPDisplayer.View.PPWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealTimePPDisplayer.View"
             mc:Ignorable="d" Width="280" Height="150" WindowStyle="None" 
             Background="#ff00ff00" 
             MouseLeftButtonDown="Window_MouseLeftButtonDown_1"
             Title="PPShow">
    <Grid>
        <StackPanel>
            <Label Name="pp_label" Content="0.00pp" HorizontalContentAlignment="Center" 
                   VerticalContentAlignment="Center"  FontSize="48" Foreground="White" 
                   Margin="0,0,0,10" Height="93">
                <Label.Effect>
                    <DropShadowEffect BlurRadius="4"/>
                </Label.Effect>
            </Label>
            <Label Name="hit_label" Content="0x100 0x50 0xMiss" 
                   VerticalAlignment="Bottom" FontSize="24" Foreground="White" 
                   VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                <Label.Effect>
                    <DropShadowEffect BlurRadius="3"/>
                </Label.Effect>
            </Label>
        </StackPanel>
    </Grid>
</Window>
